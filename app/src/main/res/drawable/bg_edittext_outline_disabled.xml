<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Corners to match standard EditText outline style -->
    <corners android:radius="4dp" /> <!-- Use standard corner radius for text fields -->
    <!-- Or use a dimens resource if defined: android:radius="@dimen/corner_radius_textfield" -->

    <!-- Outline stroke -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorOutlineVariant" /> <!-- Use a subtle outline color -->

    <!-- Optional: Subtle background color to differentiate from normal surface -->
    <solid android:color="#1A000000" /> <!-- Example: Very light black (10% alpha) -->
    <!-- Or reference a theme color: -->
    <!-- <solid android:color="?attr/colorSurfaceVariant" android:alpha="0.3"/> -->
    <!-- Or keep it transparent: -->
    <!-- <solid android:color="@android:color/transparent" /> -->

</shape>